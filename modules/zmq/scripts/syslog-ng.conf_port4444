#############################################################################
# Default syslog-ng.conf file which collects all local logs into a
# single file called /var/log/messages.
#

@version: 3.5
@include "scl.conf"

source s_zmq {
	zmq(
        port(4444)
    );
};

destination d_file {
	file("/tmp/zmq");
};

log {
	source(s_zmq);
	destination(d_file);
};
